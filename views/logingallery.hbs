<form method="post" action="/">  
  <div class="clslogincontent">
    <h3>Login</h3><br />
    <input id="txtUserName" 
           name="txtUserName" 
           type="text" 
           required 
           placeholder="Username" 
           value="{{user}}" /><br />
    
    <input id = "txtPassword" 
           name = "txtPassword" 
           type = "password" 
           required 
           placeholder = "Password" 
           value="" /><br />

    <button id="btnLogin" type="submit" value="submit">Submit</button><br />
    <a id="aRegister" href="/register">Register</a><br />
    <label name="lblMessage" id="lblMessage">{{message}}</label>
  </div>
</form>
